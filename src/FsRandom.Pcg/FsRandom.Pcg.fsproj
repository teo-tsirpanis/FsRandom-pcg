<Project Sdk="FSharp.NET.Sdk;Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>FsRandom.Pcg</PackageId>
    <PackageVersion>1.2</PackageVersion>
    <Title>The PCG RNG for F#</Title>
    <Authors>Theodore Tsirpanis</Authors>
    <Description>Implementation of the PCG Pseudorandom number generator for FsRandom. FsRandom must be installed separately.</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Copyright>Copyright 2016 © Theodore Tsirpanis. Licensed under the MIT License.</Copyright>
    <PackageTags>F# FSharp FsRandom random pcg</PackageTags>
    <PackageLicenseUrl>https://raw.githubusercontent.com/teo-tsirpanis/FsRandom-pcg/master/LICENSE.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/teo-tsirpanis/FsRandom-pcg</PackageProjectUrl>
    <TargetFrameworks>netstandard1.6;net45</TargetFrameworks>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DocumentationFile>$(OutputPath)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="AssemblyInfo.fs" />
    <Compile Include="LcgAdvance.fs" />
    <Compile Include="Pcg32.fs" />
    <Compile Include="Pcg64.fs" />
    <Compile Include="SystemRandom.fs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="FSharp.Core" Version="4.1.*" />
    <PackageReference Include="FSharp.NET.Sdk" Version="1.0.*" PrivateAssets="All" />
    <PackageReference Include="SoftWx.Numerics.Portable" Version="2.2" />
  </ItemGroup>
</Project>